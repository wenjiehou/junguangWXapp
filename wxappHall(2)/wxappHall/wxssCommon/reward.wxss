.reward-view{
   width: 76%;
  height: 860rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.reward-top-view{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #ce4031;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.reward-bottom-view{
  width: 100%;
  height: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.reward-bottom-btn{
  width: 86%;
  height: 80rpx;
  background: #f00;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border-radius: 40rpx;
}