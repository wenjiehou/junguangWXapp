/* pages/hot/hot.wxss */

.mid-view {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 150rpx;
}

.mid-left-view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  height: 100%;
}

.mid-left-bottom-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.search-view{
   display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  height: 80rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.boder-fenge {
  width: 100%;
  height: 15rpx;
  background: #eee;
}

.item-red-btn{
  display:flex;flex-direction: column;align-items: center;width: 140rpx;height: 60rpx;border-radius: 10rpx;background: #ee1818;justify-content: space-around;box-shadow: 0 1px 2px  #ce4031;
}

.brief-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 20rpx 20rpx 20rpx;
}

.brief-title-view{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 540rpx;
  height: 200rpx;
}

.brief-head-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.brief-desc-view{
   display: flex;
   width: 94%;
}

.brief-desc-text{
  display: -webkit-box;
    font-size:23rpx;
    color: gray;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow:hidden;
    text-overflow:ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
}

.breif-tab-view{
   display: flex;
   flex-direction: row;
   width: 100%;
   justify-content: flex-end;
}

.tab-text-view{
   display:flex;flex-direction: row;align-items: center;height: 36rpx;border-radius: 10rpx;justify-content: center;box-shadow: 0 0px 2px  gray;margin-left: 10rpx;
}

.game-list{
  display: flex;flex-direction:row;justify-content:space-between;
}

.mid-left-top{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}