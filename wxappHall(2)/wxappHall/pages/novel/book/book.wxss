/* pages/novel/book/book.wxss */
@import "../chapter/chapter.wxss";

page {
  background:#fdeec9;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.bg-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  background: #fdeec9;
  min-height: 100vh;
}

.title-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.content-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 20rpx 7rpx 20rpx 20rpx;
}

.chapter-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background: white;
}

.mchapter-title-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.left-control {
  display: flex;
  flex-direction: row;
  left: 0;
  position: fixed;
  z-index: 999;
}

.bottom-control {
  display: flex;
  flex-direction: row;
  left: 0;
  bottom: 0;
  right: 0;
  height: 120rpx;
  background: white;
  position: fixed;
  z-index: 999;
}

.bottom-control-content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.bottom-control-item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 25vw;
}

.little-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 20vw;
  height: 100vh;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
}

.little-control {
  display: flex;
  flex-direction: row;
  background: url("http://ju.cdn.giantfun.cn/yueEarn/story/img/zhangjiebiaoqian.png");
  background-size: 100%;
  width: 44rpx;
  height: 121rpx;
  align-items: center;
}

.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}

.modalTips {
  width: 580rpx;
  height: 320rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -120rpx 60rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx 0 30rpx;
}

.markbook-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 360rpx;
  height: 300rpx;
}

.markbook-top {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 180rpx;
  background: white;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.markbook-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: #ce4031;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.markbook-btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 179rpx;
  height: 100%;
}

.markbook-bottom-fenge {
  width: 2rpx;
  height: 60rpx;
  background: #666;
}

.bright-set {
  display: flex;
  flex-direction: column;
  left: 0;
  bottom: 120rpx;
  right: 0;
  height: 200rpx;
  background: white;
  position: fixed;
  z-index: 999;
}

.bright-set-top {
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bright-set-segment {
  width: 100%;
  height: 2rpx;
  opacity: 1;
  background: #ddd;
}

.bright-set-bottom {
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.readbg-color {
  width: 90rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bright-slider-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.font-set {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  left: 0;
  bottom: 120rpx;
  right: 0;
  height: 102rpx;
  background: white;
  position: fixed;
  z-index: 999;
}

.font-set-content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100rpx;
}

.font-set-left {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 45%;
  height: 100%;
}

.font-set-right {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 45%;
  height: 100%;
}

.font-set-segment {
  height: 80%;
  width: 2rpx;
  opacity: 1;
  background: #ddd;
}

.font-set-size {
  display: flex;
  flex-direction: row;
  width: 100rpx;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}

.sele-family {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  left: 50vw;
  bottom: 220rpx;
  right: 0;
  height: 612rpx;
  background: white;
  position: fixed;
  z-index: 999;
}

.sele-family-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}

.sele-family-icon {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-right: 20rpx;
}

