.mid-container{
  width: 100%;
  height: 146rpx;
  background: #f3f3f3;
}

.mid-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 2px 5px  #aaaaaa;
  height: 140rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.mid-inner-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin: 5rpx 15rpx 5rpx 15rpx;

}

.mid-left-top{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.bottom-top-view{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.title-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 300rpx;
  height: 60rpx;
}

.v-fenge{
  width: 2rpx;
  height: 60rpx;
  background: #ddd;
}

.h-fenge{
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: #ddd;
  height: 2rpx;
}

.game-list{
  display: flex;flex-direction:row;justify-content:space-between;
}



