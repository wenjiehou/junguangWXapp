.pop-bg {
  width: 656rpx;
  height: 656rpx;
  background: url("http://ju.cdn.giantfun.cn/yueEarn/story/img/control/sanguang.png");
  background-size: 100%;
  animation-name: myTwo;
  animation-duration: 3s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-direction: normal;
  animation-fill-mode: forwards;
  position: absolute;
}

@keyframes myfirst {
  0% {
    transform: scale(0.1, 0.1);
  }

  20% {
    transform: scale(1, 1);
  }

  60% {
    transform: scale(1, 1);
  }

  80% {
    transform: scale(0.2, 0.2);
  }

  99% {
    transform: scale(0.2, 0.2);
  }

  100% {
    transform: scale(0, 0);
  }
}

@keyframes myTwo {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.pop-content {
  width: 656rpx;
  height: 656rpx;
  background: url("http://ju.cdn.giantfun.cn/yueEarn/story/img/control/zhuanquan.png");
  background-size: 100%;
  position: absolute;
}

