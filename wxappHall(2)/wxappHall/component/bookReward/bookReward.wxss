}

.pop-container {
  width: 656rpx;
  height: 656rpx;
  position: absolute;
  /* animation-name: myfirst; *//* animation-duration: 3s;
  animation-timing-function: ease-out;
  animation-iteration-count: 1;
  animation-direction: normal;
  animation-fill-mode: forwards; *//* animation-play-state:paused; */
