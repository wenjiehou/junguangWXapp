/* component/infoList/infoList.wxss */
@import "../comp.wxss";

.view-container {
  display: flex;
  margin: 0rpx 15rpx 0rpx 15rpx;
}

.list-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 10rpx 15rpx 10rpx 15rpx;
}

.content-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.single-close-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0rpx 20rpx 0rpx;
  width: 100%;
}

.close-left-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.red-point {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: red;
}

.item-red-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100rpx;
  height: 50rpx;
  border-radius: 30rpx;
  background: #ee1818;
  justify-content: space-around;
  box-shadow: 0 1px 2px #ce4031;
}

.single-open-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
   margin: 10rpx 0rpx 10rpx 0rpx;
}

.open-right-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 560rpx;

}

.open-right-top{
    display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.open-right-bottom{
  margin-left: 20rpx;
}
