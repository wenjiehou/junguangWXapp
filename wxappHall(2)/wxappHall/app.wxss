/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.activity-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.userinfo-avatar {
  width: 110rpx;
  height: 110rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.swiper-style {
  width: 100%;
  height: 354rpx;
  skip-hidden-item-layout:true;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.fenge-content{
  width:100%;height:2rpx;background: #ccc;opacity:0.5;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9000;
}

.pop-view-bg {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,.7);
}

.share-btn{
  background: none !important;
}

.share-btn::after{
  border: none
}

.sign-before{
  display:flex;flex-direction:column;width:76rpx;height:76rpx;  align-items: center;justify-content: space-around;
}

.comm-btn{
   display:flex;flex-direction: column;align-items: center;width: 140rpx;height: 60rpx;border-radius: 10rpx;background: #ee1818;justify-content: space-around;box-shadow: 0 1px 2px  #ce4031;
}

.h-view{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.v-view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}